<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Juego">

    <TextView
        android:id="@+id/tvTiradas"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/acme"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/Tiradas"
        android:textColor="@color/Nueva_letra_azul"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/tvNumeroTiradas"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="166dp"
        android:layout_toEndOf="@+id/tvTiradas"
        android:fontFamily="@font/acme"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="0"
        android:textColor="@color/Naranja_color_secundario"
        android:textSize="34sp" />


    <ImageButton
        android:id="@+id/btnDado"
        android:layout_width="215dp"
        android:layout_height="177dp"

        android:layout_below="@+id/null"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="30dp"
        android:background="#FFFFFF"
        android:onClick="LanzarDados"
        app:srcCompat="@drawable/games_dice_craps_10813" />

    <TableRow
        android:layout_width="486dp"
        android:layout_height="597dp"
        android:layout_below="@+id/tvNumeroTiradas"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="27dp" >

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

        />
    </TableRow>

</RelativeLayout>