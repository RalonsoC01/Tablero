<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Victoria">

    <TextView
        android:id="@+id/tvVictoria"
        android:layout_width="272dp"
        android:layout_height="115dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/acme"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/Victoria"
        android:textColor="@color/Letra"
        android:textSize="80sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="200dp"
        android:layout_height="63dp"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/acme"
        android:gravity="right"
        android:text="@string/Puntuacion"
        android:textColor="@color/Letra"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvNpuntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="26dp"
        android:layout_toEndOf="@+id/tvScore"
        android:fontFamily="@font/acme"
        android:gravity="left"
        android:text="0"
        android:textColor="@color/Nueva_letra_azul"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="168dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="108dp"
        app:srcCompat="@drawable/stars" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="126dp"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-43dp"
        android:layout_marginTop="53dp"
        android:layout_toEndOf="@+id/imageView2"
        app:srcCompat="@drawable/stars" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="168dp"
        android:layout_height="138dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-14dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="22dp"
        android:layout_toEndOf="@+id/imageView3"
        app:srcCompat="@drawable/stars" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="216dp"
        android:layout_height="151dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="4dp"
        app:srcCompat="@drawable/stars" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="187dp"
        android:layout_height="149dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/imageView6"
        app:srcCompat="@drawable/stars" />

    <ImageButton
        android:id="@+id/btnReset"
        android:layout_width="185dp"
        android:layout_height="146dp"
        android:layout_below="@+id/tvScore"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="33dp"
        android:background="#FFFFFF"
        android:onClick="volver"
        app:srcCompat="@drawable/redo" />

</RelativeLayout>